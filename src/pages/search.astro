---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// 1. Obtiene el parámetro de búsqueda de la URL
const url = new URL(Astro.request.url);
const query = url.searchParams.get('q');

// 2. Obtiene todos los artículos del blog
const posts = await getCollection('blog');

// 3. Filtra los artículos según la búsqueda
const filteredPosts = query
  ? posts.filter((post) => {
      const searchContent = `${post.data.title} ${post.data.description} ${post.data.tags.join(' ')}`.toLowerCase();
      return searchContent.includes(query.toLowerCase());
    })
  : [];
---

<BaseLayout title="Búsqueda" description="Busca en nuestro contenido sobre la NBA">
  <div class="container mx-auto px-4 py-12">
    <div class="max-w-2xl mx-auto text-center">
      <h1 class="text-3xl font-bold mb-6 text-primary dark:text-background">Buscar Artículos</h1>
      <div class="relative">
        <input 
          type="text" 
          placeholder="Escribe para buscar..." 
          class="w-full px-6 py-4 bg-surface dark:bg-gray-700 border border-border dark:border-gray-600 rounded-lg text-primary dark:text-background placeholder-secondary focus:outline-none focus:ring-2 focus:ring-accent"
          value={query || ''}
          autofocus
        />
        <svg class="w-5 h-5 absolute right-4 top-4 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </div>
      <p class="text-secondary dark:text-secondary mt-4">Busca por jugadores, equipos, temporadas o conceptos</p>
    </div>

    <div class="mt-12">
      {query && filteredPosts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {filteredPosts.map(post => (
            <article class="bg-surface dark:bg-gray-800 rounded-xl overflow-hidden shadow-lg transition-transform hover:scale-105">
              <a href={`/blog/${post.slug}`} class="block">
                <div class="p-6">
                  <h3 class="text-xl font-bold mb-2 text-primary dark:text-background">
                    {post.data.title}
                  </h3>
                  <p class="text-secondary dark:text-secondary mb-4 line-clamp-2">
                    {post.data.description}
                  </p>
                </div>
              </a>
            </article>
          ))}
        </div>
      ) : (
        <p class="text-center text-secondary">
          {query ? `No se encontraron resultados para "${query}".` : 'Empieza a escribir para buscar un artículo.'}
        </p>
      )}
    </div>
  </div>
</BaseLayout>

