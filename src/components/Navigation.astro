---
interface Props {
  variant?: 'desktop' | 'mobile';
}

const { variant = 'desktop' } = Astro.props;

const navItems = [
  { id: 'home', label: 'Inicio', href: '/', icon: 'home' },
  { id: 'blog', label: 'Artículos', href: '/blog', icon: 'newspaper' },
  { id: 'teams', label: 'Equipos', href: '/teams', icon: 'users' },
  { id: 'stats', label: 'Estadísticas', href: '/stats', icon: 'chart-bar' },
  { id: 'about', label: 'Acerca de', href: '/about', icon: 'information-circle' },
];
---

{
  variant === 'mobile' ? (
    <nav class="space-y-2">
      {navItems.map((item) => (
        <a
          href={item.href}
          class="flex items-center gap-3 px-3 py-2 rounded-md text-sm font-medium text-gray-700 dark:text-gray-300 hover:text-accent hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors"
        >
          {item.label}
        </a>
      ))}
    </nav>
  ) : (
    <nav class="flex items-center gap-1">
      {navItems.map((item) => (
        <a
          href={item.href}
          class="px-3 py-2 rounded-md text-sm font-medium text-gray-700 dark:text-gray-300 hover:text-accent hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors relative after:content-[''] after:absolute after:w-0 after:h-0.5 after:bg-accent after:left-0 after:-bottom-1 after:transition-all hover:after:w-full"
        >
          {item.label}
        </a>
      ))}
    </nav>
  )
}