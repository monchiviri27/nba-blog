---
interface Props {
  src: string;
  alt: string;
}

const { src, alt } = Astro.props;

// Construye la ruta final de la imagen con la URL base
const imageUrl = `${import.meta.env.BASE_URL}${src.startsWith('/') 
  ? src.substring(1) 
  : src}`;
---

<img src={imageUrl} alt={alt} class="my-8 rounded-lg shadow-lg w-full h-auto" />