---
import Card from '../Card.astro';

interface Props {
  posts: any[];
  title: string;
  subtitle?: string;
  viewAllLink?: string;
}

const { posts, title, subtitle, viewAllLink } = Astro.props;
---

<section class="py-12">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-neutral-900 dark:text-white mb-4">{title}</h2>
      {subtitle && <p class="text-lg text-neutral-600 dark:text-neutral-400 max-w-2xl mx-auto">{subtitle}</p>}
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {posts.map(post => (
        <Card
          title={post.data.title}
          description={post.data.description}
          pubDate={post.data.pubDate}
          href={`/blog/${post.slug}`}
          image={post.data.heroImage}
          tags={post.data.tags}
        />
      ))}
    </div>
    
    {viewAllLink && (
      <div class="text-center mt-12">
        <a 
          href={viewAllLink} 
          class="inline-flex items-center px-6 py-3 bg-[#203731] hover:bg-[#2d4b43] text-white font-medium rounded-lg transition-colors shadow-md hover:shadow-lg"
        >
          Ver Todos los Art√≠culos
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </a>
      </div>
    )}
  </div>
</section>