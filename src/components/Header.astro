---
import { SITE } from '../config';
import Navigation from './Navigation.astro';

// La ruta del logo ahora usa la variable de entorno BASE_URL
const logoPath = `${import.meta.env.BASE_URL}images/assets/nba-logo.svg`;
---
<header class="sticky top-0 z-50 bg-white/80 dark:bg-gray-900/80 backdrop-blur-md border-b border-gray-200 dark:border-gray-800 transition-colors duration-300">
    <div class="container mx-auto px-4">
        <div class="flex items-center justify-between h-16">
            <a href="/nba-blog/" class="flex items-center gap-3 group">
                <img src={logoPath} alt="Logo del blog de baloncesto" class="h-10 w-10 transition-transform group-hover:scale-110"/>
                <div class="hidden md:block">
                    <div class="font-bold text-lg text-gray-900 dark:text-white">{SITE.title}</div>
                    <div class="text-xs text-gray-600 dark:text-gray-400">NBA Analysis & Stories</div>
                </div>
            </a>

            <div class="hidden lg:flex items-center gap-6">
                <Navigation />
            </div>

            <div class="flex items-center gap-3">
    <form action={`${import.meta.env.BASE_URL}search`} method="get" class="hidden lg:block">
        <div class="relative">
            <input
                type="text"
                name="q"
                placeholder="Buscar..."
                class="w-48 px-4 py-2 text-sm rounded-full bg-surface dark:bg-gray-700 border border-border dark:border-gray-600 text-primary dark:text-background placeholder-secondary focus:outline-none focus:ring-2 focus:ring-accent"
            />
            <button type="submit" aria-label="Submit search" class="absolute right-2 top-1/2 -translate-y-1/2 text-secondary">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
            </button>
        </div>
    </form>

    <a href="/nba-blog/search" aria-label="Search page" class="lg:hidden p-2 rounded-md text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
      </svg>
    </a>

    <button aria-label="Toggle dark mode" id="theme-toggle" class="p-2 rounded-md text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors">
      <svg class="w-5 h-5 hidden dark:block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"></path>
      </svg>
      <svg class="w-5 h-5 dark:hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707"></path>
      </svg>
    </button>
    <button aria-label="Open mobile menu" id="mobile-menu-btn" class="lg:hidden p-2 rounded-md text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors">
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
</div>
        </div>
    </div>

    <div id="mobile-menu" class="lg:hidden hidden border-t border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-900 transition-colors duration-300">
        <div class="container mx-auto px-4 py-4">
            <Navigation variant="mobile" /> </div>
    </div>
</header>